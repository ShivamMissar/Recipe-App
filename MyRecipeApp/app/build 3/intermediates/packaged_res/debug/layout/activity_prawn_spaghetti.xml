        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <TextView
        android:id="@+id/PHstep_2"
        android:layout_width="390dp"
        android:layout_height="98dp"
        android:fontFamily="@font/abeezee"
        android:text="Step 2: Heat the oil and add a garlic clove and fry for 2 minutes. Add tomatoes to the pan and then further fry for approx 5 minutes. Stir through the prwans and then cook for 2 minutes. Lastly add the Harissa and lemon zest and then stir."
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816" />

    <TextView
        android:id="@+id/PHstep_1"
        android:layout_width="390dp"
        android:layout_height="98dp"
        android:fontFamily="@font/abeezee"
        android:text="Step 1: Bring the pan of lightly salted water to rise and add brocoli and then further boil for 1 minute 30 seconds. Drain those contents set to one side. Cook the pasta and then drain however reserve some pasta water to aside. "
