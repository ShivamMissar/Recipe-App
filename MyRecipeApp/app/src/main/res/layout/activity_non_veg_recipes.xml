<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".non_veg_recipes">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nonvegRecBottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/navigation">
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/ChickenNoodleSoup"
        android:layout_width="152dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/yellow"
        app:cardCornerRadius="5dp"
        android:contentDescription="button for noodle soup recipe"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="-18dp"
            app:srcCompat="@drawable/chickensoup"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="172dp"
            android:fontFamily="@font/abeezee"
            android:text="Noodle Soup"
            android:textColor="@color/textColor"
            android:textSize="17dp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/PrawnHarrisaSpaghetti"
        android:layout_width="152dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/yellow"
        android:contentDescription="button for prawn spaghetti recipe"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="190dp"
            android:layout_height="205dp"
            android:layout_marginTop="-22dp"
            app:srcCompat="@drawable/prawnharissa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/abeezee"
            android:text=" Prawn spaghetti "
            android:textColor="@color/textColor"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/chickenFriedRice"
        android:layout_width="152dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/yellow"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        android:contentDescription="button for chicken fried rice recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="186dp"
            android:layout_height="200dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-14dp"
            app:srcCompat="@drawable/chickerice"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/abeezee"
            android:text="Chicken Fried Rice"
            android:textColor="@color/textColor"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/TunaBurger"
        android:layout_width="152dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/yellow"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="button for Tuna burger recipe"
        app:layout_constraintVertical_bias="0.904"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="-14dp"
            app:srcCompat="@drawable/tunaburger"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="172dp"
            android:fontFamily="@font/abeezee"
            android:text="Tuna Burgers"
            android:textColor="@color/textColor"
            android:textSize="17dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Non_VegTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adamina"
        android:text="Non-Vegetarian Recipes"
        android:textColor="@color/textColor"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <androidx.cardview.widget.CardView
        android:id="@+id/SpinachChicken"
        android:layout_width="152dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/yellow"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:contentDescription="button for spinach chicken recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="186dp"
            android:layout_height="205dp"
            android:layout_gravity="center"
            android:layout_marginTop="-16dp"
            app:srcCompat="@drawable/spinachpasta"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="@font/abeezee"
            android:text="Spinach Chicken"
            android:textColor="@color/textColor"
            android:textSize="17dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="199dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/SalmonSalad"
        android:layout_width="152dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/yellow"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        android:contentDescription="button for salmon salad recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="205dp"
            android:layout_marginTop="-18dp"
            app:srcCompat="@drawable/salmonsalad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="172dp"
            android:fontFamily="@font/abeezee"
            android:text="Salmon Salad"
            android:textColor="@color/textColor"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>